{
  "name": "react-federated-boilerplate",
  "version": "0.0.1",
  "description": "Basic React template for use with Webpack Federation Modules",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=\"development\" webpack serve --config webpack.dev.js",
    "prod": "cross-env NODE_ENV=\"production\" webpack --config webpack.prod.js",
    "bundlesize": "bundlesize",
    "test": "jest --coverage --watchAll=false --coverageDirectory=coverage",
    "test:single": "jest --watchAll=false",
    "lh": "lighthouse --output html --output-path ./tmp/report.html",
    "analyze": "node tools/bundle-analyze.js",
    "sonarqube": "npm test -- --watchAll=false || true && sonar-scanner"
  },

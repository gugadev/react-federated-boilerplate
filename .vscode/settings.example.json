{
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "language"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "jestrunner.jestCommand": "npm run test:single --",
    "sonarlint.connectedMode.connections.sonarqube": [
        {
            "serverUrl": "your sonarqube host",
            "token": "your token"
        }
    ],
    "sonarlint.connectedMode.project": {
        "projectKey": "the project wich rules come from"
    }
}
